<!DOCTYPE html>
<html>
<head>
    <title>register</title>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>
<body>

<div class="container text-center mb-5 mt-5">
    <h1>Registration</h1>
</div>
<div class="container w-50 mt-5">
    <form action="/auth/register" method="POST" name="form1">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" class="form-control" id="name" placeholder="Enter name" value="">
            <% displayValidationErrors('name'); %>
        </div>
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" name="email" class="form-control" id="email" placeholder="Enter email" value="">
            <% displayValidationErrors('email'); %>
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" name="password" class="form-control" id="password" placeholder="*********" value="">
            <% displayValidationErrors('password'); %>
        </div>
        <% if (typeof emailValidationError !== 'undefined') { %>
            <div class="text-danger mb-5"><%= emailValidationError.message %></div>
        <% } %>
        <input type="submit" class="btn btn-primary" value="Register">
        <a href="/login" class="btn btn-success ml-2">Login Here</a>
    </form>
</div>
</body>

<% function displayValidationErrors(field) { %>
    <% if (typeof error !== 'undefined' && error.validationErrors) { %>
        <% error.validationErrors.forEach(validationError => { %>
            <% if (validationError.field === field) { %>
                <div class="text-danger"><%= validationError.message %></div>
            <% } %>
        <% }); %>
    <% } %>
<% } %>

</html>